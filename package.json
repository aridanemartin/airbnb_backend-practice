{
  "name": "airbnb_backend-practice",
  "version": "1.0.0",
  "description": "Lemoncode - Backend Practice with PODS Architecture:",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start:dev": "nodemon --transpileOnly --esm src/index.ts",
    "start:local-db": "docker-compose up -d --build",
    "start": "run-p -l start:dev start:local-db",
    "test": "jest -c ./config/test/jest.js",
    "type-check": "tsc --noEmit --preserveWatchOutput",
    "type-check:watch": "npm run type-check -- --watch",
    "test:watch": "npm run test -- --watchAll -i"
  },
  "imports": {
    "#common/*": "./src/common/*",
    "#common-app/*": "./src/common-app/*",
    "#core/*": "./src/core/*",
    "#dals/*": "./src/dals/*",
    "#pods/*": "./src/pods/*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "npm-run-all": "^4.1.5"
  }
}
